{
  "name": "pwa-kit-style-loader",
  "version": "0.0.1",
  "description": "Vanilla CSS support for Salesforce PWA Kit (one-command setup)",
  "bin": {
    "pwa-kit-style-loader": "dist/init.js"
  },
  "scripts": {
    "build": "esbuild src/init.js --bundle --platform=node --outfile=dist/init.js"
  },
  "files": [
    "dist",
    "webpack.config.js",
    "postcss.config.js"
  ],
  "keywords": [
    "sfcc",
    "salesforce",
    "pwa-kit",
    "retail-react-app",
    "webpack"
  ],
  "author": "Abhisek Maiti <abhisekmaiti19@gmail.com>",
  "license": "MIT",
  "peerDependencies": {
    "@salesforce/pwa-kit-dev": ">=3"
  },
  "dependencies": {
    "autoprefixer": "^10.4.24",
    "chalk": "^5.6.2",
    "css-loader": "^7.1.3",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "style-loader": "^4.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "esbuild": "^0.27.3"
  }
}
